  `annual_report_entity_name_register_shareholder` string COMMENT '股东实体名称快照',
  `annual_report_entity_type_id_shareholder` int COMMENT '股东实体类型',
  `annual_report_equity_ratio_before_change` decimal(24,12) COMMENT '变更前股权比例',
