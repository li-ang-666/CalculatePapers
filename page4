CREATE TABLE `report_shareholder` (
`id` bigint(20) unsigned NOT NULL AUTO_INCREMENT,
`annual_report_id` bigint(20) DEFAULT NULL COMMENT '年报id',
`investor_name` varchar(255) DEFAULT NULL COMMENT '股东名称',
`subscribe_amount` varchar(50) DEFAULT NULL COMMENT '认缴出资额',
`subscribe_time` datetime DEFAULT NULL COMMENT '认缴出资时间',
`subscribe_type` varchar(50) DEFAULT NULL COMMENT '认缴出资方式',
`paid_amount` varchar(50) DEFAULT NULL COMMENT '实缴出资额',
`paid_time` datetime DEFAULT NULL COMMENT '实缴出资时间',
`paid_type` varchar(50) DEFAULT NULL COMMENT '实缴出资方式',
`createTime` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
`investor_name_clean` varchar(255)  COMMENT '年报股东清洗名',
`investor_id` bigint(20)  COMMENT '年报股东id',
`investor_type` tinyint(1)  COMMENT '1/2/3 1自然人 2公司 3非人非公司',
PRIMARY KEY (`id`),
KEY `annualreport_id` (`annual_report_id`),
KEY `idx_investor_id` (`investor_id`)
) ENGINE = InnoDB AUTO_INCREMENT = 6015830885 DEFAULT CHARSET = utf8 COMMENT = '股东及出资信息'

-- 表四 年报股东及出资信息明细表 ----------------------------------------------------------------------------------------------------------------

DROP TABLE entity_annual_report_shareholder_equity_details;
CREATE TABLE `entity_annual_report_shareholder_equity_details` (
  `id` bigint(20) unsigned NOT NULL AUTO_INCREMENT COMMENT '主键',
  `data_source_trace_id` bigint(20) unsigned  COMMENT '业务表(report_shareholder表)主键',
  `annual_report_year` int  COMMENT '年报年份',
  `tyc_unique_entity_id` varchar(50)  COMMENT '实体ID',
  `entity_name_valid` varchar(255)  COMMENT '实体名称',
  `entity_type_id` tinyint(4)  COMMENT '实体类型',
  `annual_report_tyc_unique_entity_id_shareholder` varchar(50)  COMMENT '年报公示的股东实体ID',
  `annual_report_entity_name_valid_shareholder` varchar(255)  COMMENT '年报公示股东实体名称',
  `annual_report_entity_name_register_shareholder` varchar(255)  COMMENT '年报公示股东实体名称(原始登记)',
  `annual_report_entity_type_id_shareholder` tinyint(4)  COMMENT '年报公示股东实体类型',
  `annual_report_shareholder_capital_type` varchar(50)  COMMENT '年报公示股东的出资类型(认缴、实缴)',
  `annual_report_shareholder_capital_source` varchar(255) DEFAULT NULL COMMENT '年报公示股东的出资额(原始值)',
  `annual_report_shareholder_equity_amt` bigint COMMENT '年报公示股东的出资额(精确到分)',
  `annual_report_shareholder_equity_currency` varchar(50)  COMMENT '年报公示股东的出资额单位及币种',
  `annual_report_shareholder_equity_valid_date` date COMMENT '年报公示股东的出资日期',
  `annual_report_shareholder_equity_submission_method` varchar(50)  COMMENT '年报公示股东的出资方式',
  `is_display_annual_report_shareholder_equity_details` tinyint(4) default '1' COMMENT '年报公示股东是否公示',
  `delete_status` tinyint(4) default '0' COMMENT '删除状态',
  `create_time` datetime NOT NULL DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间',
  `update_time` datetime NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP COMMENT '更新时间',
  PRIMARY KEY (`id`),
  KEY `idx_data_source_trace_id` (`data_source_trace_id`),
  KEY `idx_company_year` (`tyc_unique_entity_id`,`annual_report_year`),
  KEY `idx_company_shareholder` (`tyc_unique_entity_id`,`annual_report_tyc_unique_entity_id_shareholder`),
  KEY `idx_shareholder` (`annual_report_tyc_unique_entity_id_shareholder`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COMMENT='年报股东及出资信息明细表';



drop table `ads.ads_company_base_entity_annual_report_shareholder_equity_details`;
CREATE TABLE `ads.ads_company_base_entity_annual_report_shareholder_equity_details` (
  `id` bigint COMMENT '主键',
