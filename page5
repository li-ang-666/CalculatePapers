drop table ads.ads_bdp_equity_entity_controller_details;
create table ads.ads_bdp_equity_entity_controller_details
(
    id                                      bigint,
    tyc_unique_entity_id                    string comment '实体ID',
    entity_type_id                          int comment '实体类型',
    entity_name_valid                       string comment '实体名称',
    company_name_controlled                 string comment '被控制的企业名称',
    company_id_controlled                   string comment '被控制的企业ID',
    equity_relation_path_cnt                int comment '关联路径数',
    estimated_equity_ratio_total            decimal(24,12) comment '预计总持股比例',
    controlling_equity_relation_path_detail string comment '实际控制关系路径详情',
    control_validation_time_year            int comment '实际控制起始生效年份',
    is_controller_tyc_unique_entity_id      int comment '是否为实际控制人(否则只是拥有实际控制权)',
    create_time                             timestamp comment '创建时间',
    update_time                             timestamp comment '更新时间'
)partitioned by (pt string);


drop table ads.ads_bdp_equity_entity_beneficiary_details;
create table ads.ads_bdp_equity_entity_beneficiary_details
(
    id                                      bigint,
    tyc_unique_entity_id                    string comment '实体ID',
    entity_type_id                          int comment '实体类型',
    entity_name_valid                       string comment '实体名称',
    entity_name_beneficiary                 string comment '受益所有人名称',
    tyc_unique_entity_id_beneficiary        string comment '受益所有人实体ID',
    equity_relation_path_cnt                int comment '关联路径数',
    estimated_equity_ratio_total            decimal(24,12) comment '预计总持股比例',
    beneficiary_validation_time_year        int comment '受益所有人起始生效年份',
    beneficiary_equity_relation_path_detail string comment '受益关系路径详情',
    create_time                             timestamp comment '创建时间',
    update_time                             timestamp comment '更新时间'
)partitioned by (pt string);

drop table ads.ads_bdp_equity_shareholder_identity_type_details;
create table ads.ads_bdp_equity_shareholder_identity_type_details
(
    id                                                  bigint,
    tyc_unique_entity_id                                string comment '实体ID',
    entity_type_id                                      int comment '实体类型',
    entity_name_valid                                   string comment '实体名称',
    entity_type_id_with_shareholder_identity_type       int comment '拥有股东身份标签的实体类型',
    tyc_unique_entity_id_with_shareholder_identity_type string comment '拥有股东身份标签的实体ID',
    entity_name_valid_with_shareholder_identity_type    string comment '拥有股东身份标签的实体名称',
    shareholder_identity_type                           int comment '股东身份标签类型',
    equity_ratio_path_cnt                               int comment '持股路径数',
    estimated_equity_ratio_total                        decimal(24,12) comment '总持股比例',
    shareholder_validation_time_year                    int comment '拥有股东起始生效年份',
    create_time                                         timestamp comment '创建时间',
    update_time                                         timestamp comment '更新时间'
)partitioned by (pt string);



