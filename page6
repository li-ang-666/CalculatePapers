select '1', t1.company_id, t2.equity_pledge_target_company_name
from equity_pledge_reinvest t1
         join equity_pledge_reinvest_index t2 on t1.id = t2.main_id and t2.equity_pledgee_type = 2
where t1.pledgor_entity_id = 2196222123
  and t1.pledgor_type = 1
  and t1.is_deleted = 0
  and pledgee_type in (1, 2)
   -- and t1.equity_pledge_state in ('正常', '有效')
  and t1.equity_pledge_value != ''
  and t2.equity_pledge_target_company_name <> ''
group by t1.company_id, t2.equity_pledge_target_company_name
order by sum(t1.equity_pledge_value) desc
limit 1